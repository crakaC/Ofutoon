<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/background_mastodon_dark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowSharedElementsUseOverlay">false</item>
    </style>

    <style name="StatusActionItem">
        <item name="android:layout_width">@dimen/status_button</item>
        <item name="android:layout_height">@dimen/status_button</item>
        <item name="android:padding">@dimen/status_button_padding</item>
        <item name="android:alpha">0.8</item>
        <item name="android:tint">@color/mastodon_grey</item>
    </style>

</resources>
